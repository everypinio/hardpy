{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current file",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        },
        {
            "name": "Python: Pytest",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}/tests"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "HardPy: Build",
            "type": "debugpy",
            "request": "launch",
            "module": "build",
            "console": "integratedTerminal",
        },
        {
            "name": "HardPy: Init template",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.cli.cli",
            "console": "integratedTerminal",
            "args": [
                "init",
                "template"
            ]
        },
        {
            "name": "HardPy: Run template",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.cli.cli",
            "console": "integratedTerminal",
            "args": [
                "run",
                "template"
            ]
        },
        {
            "name": "HardPy: Start template",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.cli.cli",
            "console": "integratedTerminal",
            "args": [
                "start",
                "examples/template"
            ]
        },
        {
            "name": "HardPy: Stop template",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.cli.cli",
            "console": "integratedTerminal",
            "args": [
                "stop",
                "examples/template"
            ]
        },
        {
            "name": "HardPy: Status template",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.cli.cli",
            "console": "integratedTerminal",
            "args": [
                "status",
                "examples/template"
            ]
        },
        {
            "name": "StandCloud login",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.cli.cli",
            "console": "integratedTerminal",
            "args": [
                "sc-login",
                "demo.standcloud.localhost"
            ]
        },
        {
            "name": "StandCloud logout",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.cli.cli",
            "console": "integratedTerminal",
            "args": [
                "sc-logout",
                "demo.standcloud.localhost"
            ]
        },
        {
            "name": "Python: Example Hello HardPy",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.cli.cli",
            "console": "integratedTerminal",
            "args": [
                "run",
                "examples/hello_hardpy"
            ]
        },
        {
            "name": "Python: Example CouchDB load",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.cli.cli",
            "console": "integratedTerminal",
            "args": [
                "run",
                "examples/couchdb_load"
            ]
        },
        {
            "name": "Python: Example Minute parity",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.cli.cli",
            "console": "integratedTerminal",
            "args": [
                "run",
                "examples/minute_parity"
            ]
        },
        {
            "name": "Python: Example Multiple configs",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.cli.cli",
            "console": "integratedTerminal",
            "args": [
                "run",
                "examples/multiple_configs"
            ]
        },
        {
            "name": "Python: Example StandCloud",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.cli.cli",
            "console": "integratedTerminal",
            "args": [
                "run",
                "examples/stand_cloud"
            ]
        },
        {
            "name": "Python: Example Dialog box",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.cli.cli",
            "console": "integratedTerminal",
            "args": [
                "run",
                "examples/dialog_box"
            ]
        },
        {
            "name": "Python: Example Measurement",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.cli.cli",
            "console": "integratedTerminal",
            "args": [
                "run",
                "examples/measurement"
            ]
        },
        {
            "name": "Python: Example Attempts",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.cli.cli",
            "console": "integratedTerminal",
            "args": [
                "run",
                "examples/attempts"
            ]
        },
        {
            "name": "Python: Example Operator Message",
            "type": "debugpy",
            "request": "launch",
            "module": "hardpy.cli.cli",
            "console": "integratedTerminal",
            "args": [
                "run",
                "examples/operator_msg"
            ]
        },
        {
            "name": "Run Frontend",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/hardpy/hardpy_panel/frontend",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "vite"
            ],
            "console": "integratedTerminal",
            "env": {
                // Add path to yarn and node to PATH
                "PATH": "${env:HOME}/miniconda3/envs/hardpy/bin:${env:PATH}"
            },
            "preLaunchTask": "yarn install"
        },
        {
            "name": "Debug Frontend",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/hardpy/hardpy_panel/frontend",
            "sourceMaps": true,
            "timeout": 30000
        }
    ]
}
